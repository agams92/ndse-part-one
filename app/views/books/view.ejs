<%- include("../blocks/layout-start", {title: title}) %>
<%- include("../blocks/menu") %> 

  <h1>
    <%= title %>
  </h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <h3 class="card-title">
            <%= book.title %>
          </h3>
          <h4>Авторы</h4>
          <p class="card-text">
            <%= book.authors %>.
          </p>
          <h4>Описание</h4>
          <p class="card-text">
            <%= book.description %>.
          </p>
          <h4>Файл книги</h4>
          <p class="card-text">
            <%= book.fileBook %>.
          </p>

          <div class="text-right">
            <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
              <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
          </div>
          <h6>Количество просмотров книги: <%= bookViews %></h4>
        </div>
      </div>
    </div>
  </div>

<%- include("../blocks/layout-end") %>